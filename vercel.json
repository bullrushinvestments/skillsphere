import type { BuildCommand, EnvironmentVariables, HeaderRule } from './types'; // Assuming custom types are defined in a separate file

interface CacheControlStrategy {
  matchPath: string;
  headers: Array<{ key: string; value: string }>;
}

interface FrameworkSettings {
  vercel?: Record<string, any>;
  netlify?: Record<string, any>;
}

interface DeployConfig {
  build: BuildCommand;
  env: EnvironmentVariables;
  headers: HeaderRule[];
  cacheControlStrategies: CacheControlStrategy[];
  frameworkSpecificSettings: FrameworkSettings;
}

export const deployConfig: DeployConfig = {
  build: {
    command: 'next build',
    output: '.next'
  },
  env: {
    NEXT_PUBLIC_API_URL: process.env.NEXT_PUBLIC_API_URL,
    NEXT_PUBLIC_STRIPE_KEY: process.env.NEXT_PUBLIC_STRIPE_KEY
  },
  headers: [
    {
      source: '/(.*)',
      headers: [
        { key: 'Access-Control-Allow-Origin', value: '*' },
        { key: 'Access-Control-Allow-Methods', value: 'GET,OPTIONS' }
      ]
    }
  ],
  cacheControlStrategies: [
    {
      matchPath: '/api/:path*',
      headers: [{ key: 'Cache-Control', value: 's-maxage=1, stale-while-revalidate=3600' }]
    },
    {
      matchPath: '/_next/static/:path*',
      headers: [{ key: 'Cache-Control', value: 'public, max-age=31536000, immutable' }]
    }
  ],
  frameworkSpecificSettings: {
    vercel: {
      buildCommand: 'yarn build',
      outDir: '.next'
    },
    netlify: {
      publish: '.next',
      functions: 'functions'
    }
  }
};

